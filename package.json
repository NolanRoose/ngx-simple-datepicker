{
  "name": "ngx-simple-datepicker",
  "version": "1.2.2",
  "scripts": {
    "ng": "ng",
    "start": "ng serve demo",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "lint": "ng lint",
    "lint:lib": "yarn run lint-ts:lib && yarn run lint-html:lib",
    "lint-ts:lib": "eslint \"projects/nolanroose/ngx-simple-datepicker/**/*.{js,ts}\" --max-warnings=0 --parser-options={tsconfigRootDir:projects/nolanroose/ngx-simple-datepicker}",
    "lint-html:lib": "eslint \"projects/nolanroose/ngx-simple-datepicker/src/**/*.html\" --max-warnings=0 --parser-options={tsconfigRootDir:projects/nolanroose/ngx-simple-datepicker}",
    "lint-ts-fix:lib": "yarn run lint:lib --fix",
    "lint-html-fix:lib": "yarn run lint-html --fix",
    "coverage:lib": "ng test @nolanroose/ngx-simple-datepicker --no-watch --code-coverage",
    "test:lib": "ng test @nolanroose/ngx-simple-datepicker --watch=false --progress=false --browsers=ChromeHeadlessCI",
    "test:lib:dev": "ng test @nolanroose/ngx-simple-datepicker --watch=true --progress=true --browsers=ChromeHeadlessCI",
    "copy-files": "cp README.md dist/nolanroose/ngx-simple-datepicker/README.md && cp LICENSE dist/nolanroose/ngx-simple-datepicker/LICENSE",
    "build:lib:dev": "ng build @nolanroose/ngx-simple-datepicker --watch --configuration development",
    "build:lib:prod": "ng build @nolanroose/ngx-simple-datepicker --configuration production",
    "ci:lib": "run-s lint:lib test:lib",
    "package": "run-s build:lib:prod copy-files",
    "prepack": "yarn run package",
    "pack": "yarn pack ./dist/nolanroose/ngx-simple-datepicker/",
    "prepublish:lib": "run-s ci:lib package",
    "publish:lib": "yarn publish --access public ./dist/nolanroose/ngx-simple-datepicker"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^15.0.4",
    "@angular/common": "^15.0.4",
    "@angular/core": "^15.0.4",
    "@angular/forms": "^15.0.4",
    "@angular/platform-browser": "^15.0.4",
    "@angular/platform-browser-dynamic": "^15.0.4",
    "@angular/router": "^15.0.4",
    "angular2-text-mask": "^9.0.0",
    "luxon": "^3.2.1",
    "rxjs": "^7.8.0",
    "text-mask-addons": "^3.8.0",
    "tslib": "^2.4.1",
    "vanillajs-datepicker": "^1.2.0",
    "zone.js": "^0.12.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^15.0.4",
    "@angular-eslint/builder": "^15.1.0",
    "@angular-eslint/eslint-plugin": "^15.1.0",
    "@angular-eslint/eslint-plugin-template": "^15.1.0",
    "@angular-eslint/schematics": "^15.1.0",
    "@angular-eslint/template-parser": "15.1.0",
    "@angular/cli": "^15.0.4",
    "@angular/compiler-cli": "^15.0.4",
    "@types/jasmine": "^4.3.1",
    "@types/luxon": "^3.2.0",
    "@types/vanillajs-datepicker": "^1.2.1",
    "@typescript-eslint/eslint-plugin": "^5.47.1",
    "@typescript-eslint/parser": "^5.47.1",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jasmine-core": "^4.5.0",
    "karma": "^6.4.1",
    "karma-chrome-launcher": "^3.1.1",
    "karma-coverage": "^2.2.0",
    "karma-jasmine": "^5.1.0",
    "karma-jasmine-html-reporter": "^2.0.0",
    "ng-packagr": "^16.2.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.1",
    "typescript": ">=4.8.2  <4.9.0"
  }
}
